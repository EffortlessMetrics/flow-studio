{
  "cleanupPeriodDays": 30,
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "1800000",
    "BASH_MAX_TIMEOUT_MS": "7200000",
    "BASH_MAX_OUTPUT_LENGTH": "50000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "MCP_TIMEOUT": "60000",
    "MCP_TOOL_TIMEOUT": "3600000"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": true,
    "excludedCommands": [
      "docker",
      "docker-compose",
      "podman",
      "watchman"
    ]
  },
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "WebFetch",
      "WebSearch",
      "Bash",
      "Read",
      "Edit",
      "MultiEdit",
      "Write"
    ],
    "ask": [
      "Bash(rm -rf *)",
      "Bash(git push *)",
      "Bash(git reset --hard *)",
      "Bash(git clean -fd*)",
      "Bash(npm publish*)",
      "Bash(pnpm publish*)",
      "Bash(npm login*)",
      "Bash(pnpm login*)",
      "Bash(docker login*)",
      "Bash(ssh *)",
      "Bash(scp *)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build/**)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.kube/**)",
      "Read(~/.git-credentials)",
      "Read(~/.config/gh/**)",
      "Read(~/.npmrc)",
      "Read(~/.pypirc)",
      "Read(~/.cargo/credentials)",

      "Write(./.env)",
      "Write(./.env.*)",
      "Write(./secrets/**)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Write(~/.kube/**)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true
  }
}
